<h2 class="w3-text-orange" class="w3-jumbo" class = w3-section style="text-shadow:1px 1px 0 #444">Devient un membre du Secret</h2>
<br>
<%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <p>Email :</p>
  <%= f.email_field :email, class: 'form-control' %>
<br>
  <p>Mot de passe :</p>
  <%= f.password_field :password, class: 'form-control' %>
<br>
  <p>Confirmation :</p>
  <%= f.password_field :password, class: 'form-control' %>
<br>
  <%= f.submit "Valider", class: "btn btn-success" %>
<% end %>
